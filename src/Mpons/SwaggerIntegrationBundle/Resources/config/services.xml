<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	<services>

		<service class="Mpons\SwaggerIntegrationBundle\EventListener\RequestListener">
			<argument id="Mpons\SwaggerIntegrationBundle\Service\SwaggerService" type="service"/>
			<tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest"/>
			<tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse"/>
		</service>

		<service class="Mpons\SwaggerIntegrationBundle\Service\SwaggerService" id="Mpons\SwaggerIntegrationBundle\Service\SwaggerService">
			<argument/> <!-- config -->
			<argument type="service" id="Mpons\SwaggerIntegrationBundle\Mapper\SwaggerMapper"/>
			<argument type="service" id="Mpons\SwaggerIntegrationBundle\Mapper\EventMapper"/>
		</service>

		<service class="Mpons\SwaggerIntegrationBundle\Mapper\SwaggerMapper" id="Mpons\SwaggerIntegrationBundle\Mapper\SwaggerMapper">
			<argument type="service" id="Mpons\SwaggerIntegrationBundle\ModelDescriber\JMSModelDescriber"/>
		</service>

		<service class="Mpons\SwaggerIntegrationBundle\Mapper\EventMapper" id="Mpons\SwaggerIntegrationBundle\Mapper\EventMapper">
			<argument /> <!-- includeHeaders -->
			<argument /> <!-- excludeHeaderss -->
		</service>

		<service class="Mpons\SwaggerIntegrationBundle\ModelDescriber\JMSModelDescriber" id="Mpons\SwaggerIntegrationBundle\ModelDescriber\JMSModelDescriber">
			<argument type="service" id="jms_serializer.metadata_factory"/>
			<argument type="service" id="jms_serializer.naming_strategy"/>
		</service>
	</services>
</container>
